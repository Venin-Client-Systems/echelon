{
  "name": "echelon",
  "version": "0.1.0",
  "description": "Hierarchical multi-agent AI org orchestrator",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Venin-Client-Systems/echelon.git"
  },
  "keywords": [
    "ai",
    "orchestrator",
    "multi-agent",
    "claude",
    "cli"
  ],
  "files": [
    "dist",
    "ralphy",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "echelon": "./dist/index.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && node -e \"const fs=require('fs');const f='dist/index.js';let s=fs.readFileSync(f,'utf8');if(s.startsWith('#!'))s=s.slice(s.indexOf('\\n')+1);fs.writeFileSync(f,'#!/usr/bin/env node\\n'+s);fs.chmodSync(f,0o755)\"",
    "dev": "tsx src/index.ts",
    "test": "vitest run && npm run test:node-only",
    "test:watch": "vitest --watch",
    "test:vitest": "vitest",
    "test:node-only": "tsx --test src/core/__tests__/error-boundaries.test.ts src/lib/__tests__/config.test.ts",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs:api": "typedoc"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.76.0",
    "commander": "^13.1.0",
    "grammy": "^1.40.0",
    "ink": "^5.2.0",
    "nanoid": "^5.1.2",
    "react": "^18.3.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.13.4",
    "@types/react": "^18.3.18",
    "eslint": "^10.0.0",
    "tsx": "^4.19.3",
    "typedoc": "^0.28.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20"
  }
}
